<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Listado de Artículos</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                            <tr>
                                <th>Ver</th>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Id Tipo de Artículo</th>
                                <th>Id Marca</th>
                                <th>Fecha Creación</th>
                                <th>Fecha Actualización</th>
                                <th>Estado</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each itemList}}
                                <tr>
                                    <td align="center"><a href="/item/{{id}}"><img src="/icons/eye-svgrepo-com.svg" style="width: 40%" alt=""></a></td>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{price}}</td>
                                    <td>{{typeItem}}</td>
                                    <td>{{brand}}</td>
                                    <td>{{creationDate}}</td>
                                    <td>{{updateDate}}</td>
                                    <td>{{active}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Ver</th>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Id Tipo de Artículo</th>
                                <th>Id Marca</th>
                                <th>Fecha Creación</th>
                                <th>Fecha Actualización</th>
                                <th>Estado</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>